<tr>
    <td>{{ activityItem.author.name }}</td>
    <td>{{ activityItem.title }}</td>
    <td>{{ activityItem.duration|carbonInterval }}</td>
    <td>
        {% for tag in activityItem.tags %}
            {{ tag.name }}{% if not loop.last %}, {% endif %}
        {% endfor %}
    </td>
    <td>
        <button type='button' class='btn btn-outline-secondary' data-toggle="modal" data-target="#activityItem{{ activityItem.id }}">Modify</button>
    </td>
</tr>
